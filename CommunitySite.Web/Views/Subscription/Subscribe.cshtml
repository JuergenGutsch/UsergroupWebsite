@model CommunitySite.Web.Models.SubscribeModel

@{
    ViewBag.Title = "Subscribe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subscribe</h2>
@using (Html.BeginForm("Subscribe"))
{
    if (Model.Event != null)
    {
    <p></p>
    }
    <dl>
        <dt>@Html.LabelFor(model => model.Name)</dt>
        <dd>@Html.TextBoxFor(model => model.Name) @Html.ValidationMessageFor(model => model.Name, "*")</dd>
        <dt>@Html.LabelFor(model => model.Email)</dt>
        <dd>@Html.TextBoxFor(model => model.Email) @Html.ValidationMessageFor(model => model.Email, "*")</dd>
    </dl>
    <input type="submit" value="Absenden" />
}