@using CommunitySite.Web.Extensions;

@model CommunitySite.Web.Models.EventDetailListModel

@{
    var hasnext = Model.CurrentPage < Model.PageCount - 1;
    var hasprev = Model.CurrentPage > 0;
}

<ul class="pager">
    @if (hasprev)
    {
        <li class="previous"><a href="@Url.CurrentAction(new { id = Model.CurrentPage - 1 })">&larr; Zurück</a></li>
    }
    @if (hasnext)
    {
        <li class="next"><a href="@Url.CurrentAction(new { id = Model.CurrentPage + 1 })">Weiter &rarr;</a></li>}
</ul>