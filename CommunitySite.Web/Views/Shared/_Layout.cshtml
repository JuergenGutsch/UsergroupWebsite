<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - .NET-Stammtisch Konstanz-Kreuzlingen</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    <div class="container" id="con">
        <div class="row">
            <div class="col-md-12">
                <img src="/Content/Images/logo_blog.png" alt="logo: .NET-Stammtisch Konstanz-Kreuzlingen" />
            </div>
        </div>
    </div>
    <nav class="container" data-spy="affix" data-offset-top="150" id="nav" role="navigation">
        <div class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">.NET-Stammtisch Konstanz-Kreuzlingen</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Termine", "Index", "Calendar")</li>
                        <li>@Html.ActionLink("Reminder", "Index", "Reminder")</li>
                        <li><a href="/Page/About">Über uns</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - .NET-Stammtisch Konstanz-Kreuzlingen</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
