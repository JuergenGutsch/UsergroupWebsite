@model CommunitySite.Web.Models.EventDetailModel

<div>
    <article>
        <hgroup>
            <h2>@Model.Event.Title</h2>
            @if (Model.Event.Id != Guid.Empty)
            {
                <h3>@Model.Event.FromDate.ToString("ddd, dd. MMMM yyyy HH:mm") - @Model.Event.ToDate.ToString("HH:mm") Uhr</h3>
            }
        </hgroup>
        <p>
            @Html.Raw(Model.Event.Teaser)
        </p>
        <footer>
            @if (Model.Event.Id != Guid.Empty)
            {
                <p>@Html.ActionLink("Details", "Detail", "Calendar", new { id = Model.Event.Id }, new { })</p>
            }
        </footer>
    </article>
</div>